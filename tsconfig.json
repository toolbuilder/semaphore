{
  "include": ["src/**/index.js"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true
  }
}
